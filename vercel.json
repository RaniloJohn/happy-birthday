{
    "version": 2,
    "builds": [
        {
            "src": "**/*",
            "use": "@vercel/static"
        }
    ],
    "headers": [
        {
            "source": "/assets/audio/(.*).mp3",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "audio/mpeg"
                },
                {
                    "key": "Accept-Ranges",
                    "value": "bytes"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000"
                }
            ]
        }
    ]
}